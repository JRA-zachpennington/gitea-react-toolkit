{
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "noEmit": true,
    /** For function overloads*/
    "noImplicitAny": false,
    "sourceMap": true,
  },
  "include": [
    "**/**.ts"
  ],
  "exclude": [
    "**/node_modules/**"
  ],
}